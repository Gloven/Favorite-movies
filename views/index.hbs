<div class="container">
    <div class="row text-center " id="filter-bar">
        <div class="col-sm-2">
            <!--   ============= sort ============================   -->

            <form action="/sort" method="post">
            <button type="submit" class="btn btn-info" id="sort-btn">
                Sort by title
            </button>
            </form>
        </div>
        <div class="col-sm-3">
                            <!--   ============= find ============================   -->
            <form action="/find" method="post">
                <div id="custom-search-input">
                    <div class="input-group ">
                        <input type="text" class="form-control input-lg" name="inputData" id="inputData"/>
                        <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                        </button>
                        </span>
                    </div>
                </div>
             </form>
        </div>
        <!--   ============= upload files ============================   -->
        <div class="col-sm-3">
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" name ="myfile" accept="text/*">
            <input class="btn btn-info" type="submit" value="Upload movie list" id="upl-btn">
        </form>
    </div>

        <!--   ================ add miveies with uploud file==============-->
        <div class="col-sm-2">
            <form action="/add_upload" method="post">
                <button  type="submit" class="btn btn btn-success" name = "addUpload"  >
                    Add  data from movie list
                </button>
            </form>

        </div>

        <!--   ============= add new movie ============================   -->
     <div class="col-sm-2">
            <form action="/add" method="post">
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" id="add-btn">
                    <span class="glyphicon glyphicon-plus"></span>
                </button>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Add new film</h4>
                            </div>
                            <div class="modal-body" >
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <div class="field">
                                        <input type="text" name="title" class="form-control" placeholder="Title" value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="year">Year</label>
                                    <div class="field">
                                        <input type="number" min="0" name="releaseYear" class="form-control" value="2016">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="format">Format</label>
                                    <select class="form-control" name="format">
                                        <option>DVD</option>
                                        <option>VHS</option>
                                        <option>Blu-Ray</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                                <div class="form-group"><label for="stars">Stars(comma separated)</label>
                                    <div class="field">
                                        <input type="text" name="stars" class="form-control" placeholder="Actors" value="">
                                    </div>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
     </div>
    </div>
</div>


{{# each films}}
            <div class="accordion list-group" id="accordion2">
                {{# each this}}
                <div class="row">
                    <div class="col-lg-11">
                        <div style="" id="movie-list">
                            <button type="button" class="list-group-item" data-toggle="collapse" data-target="#demo{{this._id}}" >
                                {{this.title}}
                            </button>
                            <div id="demo{{this._id}}" class="collapse">
                                <ul>
                                    <li>Release year: {{this.releaseYear}}</li>
                                    <li>Format: {{this.format}}</li>
                                    <li>Stars:  {{this.stars}} </li>
                                    <li>Id: {{this._id}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <form action="/delete" method="post">
                        <button  type="submit" class="btn   btn-danger" data-toggle="modal" data-target=".bs-example-modal-sm" name = "removeId" value="{{this._id}}" >
                            <span class="glyphicon glyphicon-remove-circle"></span>
                        </button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
{{/each}}
